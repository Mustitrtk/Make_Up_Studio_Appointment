        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const calendarEl = document.getElementById('calendar');
                const calendar = new FullCalendar.Calendar(calendarEl, {
                    locale: 'tr',
                    initialView: 'dayGridMonth',
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'dayGridMonth'
                    },
                    selectable: true,
                    events: '/appointment/get',
                    dateClick: function(info) {
                        const today = new Date();
                        if (new Date(info.dateStr) < today.setHours(0,0,0,0)) {
                            alert("Geçmiş tarihe randevu eklenemez!");
                            return;
                        }
                        $('#selectedDate').text(info.dateStr);
                        $('input[name="DateTime"]').val(info.dateStr);

                        $('#appointmentList').empty();

                        loadAppointments(info.dateStr);
                        $('#appointmentModal').modal('show');
                    }
                });
                calendar.render();

                $('#appointmentForm').submit(function(e) {
                    e.preventDefault();

                    $('#appointmentList').empty();

                    const dateStr = $('input[name="DateTime"]').val();
                    const timeStr = $('input[name="Time"]').val();

                    const dateTime = new Date(`${dateStr}T${timeStr}:00`);

                    const formData = {
                        Name: $('input[name="Name"]').val(),
                        Surname: $('input[name="Surname"]').val(),
                        Description: $('textarea[name="Description"]').val(),
                        DateTime: dateTime.toISOString(),
                        Time: timeStr
                    };

                    $.post('/appointment/create', formData, function(newEvent) {
                        calendar.addEvent({
                            title: newEvent.Name,
                            start: newEvent.DateTime,
                            allDay: false
                        });
                        loadAppointments(dateStr);
                        $('#appointmentForm')[0].reset();
                    });
                });

                // Listeleme
                function loadAppointments(date) {
                    $.get('/appointment/getByDate?_date=' + date, function(response) {
                        if (response.success && Array.isArray(response.data)) {
                            const list = $('#appointmentList').empty();
                            response.data.forEach(a => {
                                list.append(`
                                    <tr>
                                        <td>${a.Name}</td>
                                        <td>${a.Surname}</td>
                                        <td>${a.Description}</td>
                                        <td>${new Date(a.DateTime).toLocaleString()}</td>
                                        <td>${a.Time}</td>
                                        <td><i class="bi bi-trash delete-btn" data-id="${a._id}"></i></td>
                                    </tr>
                                `);
                            });
                        } else {
                            $('#appointmentList').html('<tr><td colspan="6">Randevu bulunamadı.</td></tr>');
                        }
                    });
                }

                // Silme
                $(document).on('click', '.delete-btn', function() {
                    const id = $(this).data('id');
                    $.ajax({
                        url: '/appointment/delete/' + id,
                        type: 'DELETE',
                        success: function() {
                            calendar.refetchEvents();
                            loadAppointments($('input[name="DateTime"]').val());
                        }
                    });
                });
            });
        </script>

